<title>
    <%= title  %>
</title>
<link rel="stylesheet" href="/css/sign.css">
<div id="sign-container">
    <h1>Sign In</h1>

    <form action="/users/create-session" method="POST">
        <input type="email" name="email" placeholder="Email" required>
        <input type="password" name="password" placeholder="Password" required>
        <input type="submit" value="Sign In">
    </form>
    <a href="/users/sign-up"><button>Sign-Up</button></a>
    <p
        style="border-radius:20px;text-align: center;margin-left: 35%;margin-top: 5%;background-color: rgb(212, 30, 30);width: 200px;height: 25px;">
        <a style="color: rgb(253, 253, 253);text-decoration: none;" href="/users/auth/google">Google sign-in/sign-up</a>
    </p>
</div>